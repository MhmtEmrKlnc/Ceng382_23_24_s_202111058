@page
@model AddRoomModel
@{
    ViewData["Title"] = "Add Room";
}
<h1 style="text-align: center">@ViewData["Title"]</h1>
<br>

<div class="center-screen" >
    <form method="post" class="form-border" style="height: fit-content;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group form-">
            <label asp-for="NewRoom.RoomName" class="control-label">Room Name</label>
            <input asp-for="NewRoom.RoomName" class="form-input form-control " />
            <span asp-validation-for="NewRoom.RoomName" class="text-danger"></span>
        </div>
        <br>
        <div class="form-group">
            <label asp-for="NewRoom.PricePerNight" class="control-label">Price Per Night</label>
            <input asp-for="NewRoom.PricePerNight" class="form-input form-control" />
            <span asp-validation-for="NewRoom.PricePerNight" class="text-danger"></span>
        </div>
        <br>
        <div class="form-group">
            <label asp-for="NewRoom.Capacity" class="control-label">Capacity</label>
            <input asp-for="NewRoom.Capacity" class="form-input form-control" />
            <span asp-validation-for="NewRoom.Capacity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <br>
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
        
    </form>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>
