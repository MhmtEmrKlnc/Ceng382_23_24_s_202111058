@page "{id:int}"
@model EditReservationModel
@{
    ViewData["Title"] = "Edit Reservation";
}
<h1 style="text-align: center">@ViewData["Title"]</h1>
<br>

<div class="center-screen">



    <form method="post" class="form-border" style="height: fit-content;">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" style="display:none">
            <label asp-for="reservation.Id" class="control-label"></label>
            <input asp-for="reservation.Id" class="form-control" readonly />
            <span asp-validation-for="reservation.Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="reservation.RoomId" class="control-label">Room</label>
            <select asp-for="reservation.RoomId" class="form-control">
                @foreach (var room in EditReservationModel.RoomList)
                {
                <option value="@room.Id">@room.RoomName</option>
                }
            </select>
            <span asp-validation-for="reservation.RoomId" class="text-danger"></span>
        </div>
        <br>
        <div class="form-group">
            <label asp-for="reservation.ReservationStartDate" class="control-label">Reservation Start Date</label>
            <input class="form-control" asp-for="reservation.ReservationStartDate" />
        </div>
        <br>
        <div class="form-group">
            <label asp-for="reservation.ReservationEndDate" class="control-label">Reservation End Date</label>
            <input class="form-control" asp-for="reservation.ReservationEndDate" />
        </div>
        <br>

        <div class="form-group">
            <br>
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>

    </form>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>
